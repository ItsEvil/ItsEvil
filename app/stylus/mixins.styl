font-size(value) {
		font-size: value; /* добавляем PX как подстраховку */

		if (value is inherit) {
				/* делаем если нет значения для шрифта */
		} else {
				font-size: remify(value);
		}
}

remify(value) {
		u = unit(value);

		if (u is 'px') {
				return unit(value/16, 'rem');
		} else {
				return unit(value, u);
		}
}

cf()
	&:before,
	&:after
		content " "
		display table
	&:after
		clear both
